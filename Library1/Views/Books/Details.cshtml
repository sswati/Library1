@model Library1.Models.Book

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>


<div class="panel page-header">
    <meta name="viewport" content="width=device-width" />
    <h1>@Model.Name</h1>
</div>
<body>
    <div class="panel-body">
        <div class="">
            <div class="panel panel-body">
                <div class="col-sm-9 pull-right">
                    <div class="col-md-5">

                        <br />
                        <dl class="dl-horizontal">


                            <dt>
                                @Html.DisplayNameFor(model => model.Author):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Author)
                            </dd>
                            <dt></dt>
                            <dt>
                                @Html.DisplayNameFor(model => model.Genre):
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Genre)
                            </dd>
                            <dt></dt>
                            <dt>

                            </dt>

                            <dd class="imagepadding">
                                <img src="@Url.Content(Model.Image)" id="hover" alt="Book" class="img-rounded" height="100" width="100"
                                     style="border-color:black" />
                            </dd>
                            <dt></dt>

                            <dt>
                                Loan Status:
                            </dt>

                            <dd>
                                @if (Model.OnLoan == 1)
                                {
                                    <p>On Loan</p>
                                }

                                else
                                {
                                    <p>Available</p>
                                }
                            </dd>

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p class="panel panel-body">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ISBN }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
