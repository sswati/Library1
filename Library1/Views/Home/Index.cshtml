    <link href="~/Content/Site.css" rel="stylesheet" />
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">


    <h1>Librarian’s Administrative System</h1>

</div>


<br />

<div class="col-sm-5 pull-right">
    <button class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">



        <img src="~/Images/book-25155_1280-compressor.png" style="width:80%; height:75%" />


    </button>


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        &times;
                    </button>
                    <h2 class="modal-title" id="myModalLabel">
                        Books
                    </h2>
                </div>
                <div class="modal-body">

                    <div class="text-center">
                        <p>@Html.ActionLink("Checkout Book", "Checkout", "Checkout", null, new { @class = "btn btn-primary btn-lg" })</p>

                        <br />
                        <p>@Html.ActionLink("Return Book", "Index", "BookReturn", null, new { @class = "btn btn-primary btn-lg" })</p>

                        
                        <br />
                        <p>@Html.ActionLink("Add Book", "Create", "Books", null, new { @class = "btn btn-primary btn-lg" })</p>

                        <br />
                        <p>@Html.ActionLink("Edit | Delete | Details Book", "Index", "Books", null, new { @class = "btn btn-primary btn-lg" })</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Close
                    </button>

                </div>
            </div>
        </div>
    </div>

</div>




<div class="col-sm-5">
    <button class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModalMem">



        <img src="~/Images/computer-1331579_1280-compressor.png"  style="width:70%; height:75%"/>
    </button>


    <div class="modal fade" id="myModalMem" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabelMem" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"
                            aria-hidden="true">
                        &times;
                    </button>
                    <h2 class="modal-title" id="myModalLabelMem">
                        Members
                    </h2>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <p>@Html.ActionLink("Add Member", "Create", "Members", null, new { @class = "btn btn-primary btn-lg" })</p>
                        <br />
                        <p>@Html.ActionLink("Edit | Delete | Details Member", "Index", "Members", null, new { @class = "btn btn-primary btn-lg" })</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Close
                    </button>

                </div>
            </div>
        </div>
    </div>

</div>




